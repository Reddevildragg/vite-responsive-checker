{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "plugins/**/*",
    "plugins/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@plugins/*": ["./plugins/*"],
      "vite-responsive-review": ["plugins/vite-responsive-review/src/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}